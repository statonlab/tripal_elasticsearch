  // Define N = 10 cron queues
  $queue_number = 10;
  for ($n = 1; $n <= $queue_number; $n++) {
    $queues['elasticsearch_queue_' . $n] = [
      'worker callback' => 'tripal_elasticsearch_cron_queue_worker_callback',
